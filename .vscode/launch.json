  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch openECOE API",
      "type": "python",
      "request": "launch",

      "module": "flask",
      "env": { 
        "FLASK_APP": "openECOE-API.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["run", "--no-debugger"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
    {
      "name": "Launch RQ Worker",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openECOE-API.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["rq", "worker"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
