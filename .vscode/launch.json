  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Docker",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "0.0.0.0",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app/api"
        }
      ]
    },
    {
      "name": "Launch openECOE API",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "envFile": "${workspaceFolder}/environments/local.env",
      "env": {
        "FLASK_APP": "openECOE-API.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "run",
        "-h",
        "localhost",
        "-p",
        "5000"
      ],
      "jinja": true
    },
    {
      "name": "Launch openECOE API with Gunicorn",
      "type": "python",
      "request": "launch",
      "module": "gunicorn",
      "args": [
        "openECOE-API:app",
        "-k",
        "eventlet",
        "-b",
        "localhost:5000",
        "--reload",
        "-w",
        "2"
      ],
      "gevent": true,
      "envFile": "${workspaceFolder}/environments/local.env",
      "env": {
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch RQ Worker",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "args": ["rq", "worker"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/local.env",
      "autoReload": {"enable": false}
    },
    {"name": "Migrate DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openECOE-API.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["db", "migrate"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
    {"name": "Upgrade DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openECOE-API.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["db", "upgrade"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/local.env",
      "autoReload": {"enable": false}
    },
    {"name": "Downgrade DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openECOE-API.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["db", "downgrade"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
    {"name": "Current revision DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openECOE-API.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["db", "current"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    }
  ]
}
