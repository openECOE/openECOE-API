  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Docker",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "0.0.0.0",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app/api"
        }
      ]
    },
    {
      "name": "Launch openECOE API",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "envFile": "${workspaceFolder}/environments/dev.env",
      "env": {
        "FLASK_APP": "openecoe-api.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "run",
        "-h",
        "localhost",
        "-p",
        "5000"
      ],
      "jinja": false,
      "justMyCode": true
    },
    {
      "name": "Launch openECOE API (Prod)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "envFile": "${workspaceFolder}/environments/prod.env",
      "env": {
        "FLASK_APP": "openecoe-api.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "run",
        "-h",
        "localhost",
        "-p",
        "5000"
      ],
      "jinja": false,
      "justMyCode": true
    },
    {
      "name": "Launch openECOE CHRONO",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "envFile": "${workspaceFolder}/environments/dev.env",
      "env": {
        "FLASK_APP": "manager:chrono",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "run",
        "-h", "localhost",
        "-p", "5001",
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Launch openECOE API (Gunicorn)",
      "type": "python",
      "request": "launch",
      "module": "gunicorn",
      "args": [
        "--reload",
        "-c","${workspaceFolder}/configs/gunicorn_conf.py",
        "openecoe-api:app"
      ],
      "envFile": "${workspaceFolder}/environments/dev.env",
      "env": {
        "PORT": "5000",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch openECOE Chrono (Gunicorn)",
      "type": "python",
      "request": "launch",
      "module": "gunicorn",
      "args": [
        "--reload",
        "-c","${workspaceFolder}/configs/gunicorn_conf.py",
        "--workers","1",
        "-k","eventlet",
        "openecoe-chrono:app"
      ],
      "gevent": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "env": {
        "PORT": "5001",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {"name": "Migrate DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openecoe-api.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
      },
      "args": ["db", "migrate"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
    {"name": "Upgrade DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openecoe-api.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["db", "upgrade"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
    {"name": "Downgrade DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openecoe-api.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["db", "downgrade"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
    {"name": "Current revision DB",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { 
        "FLASK_APP": "openecoe-api.py", 
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
      },
      "args": ["db", "current"],
      "jinja": false,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/environments/dev.env",
      "autoReload": {"enable": false}
    },
    {
      "name": "Launch worker",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "envFile": "${workspaceFolder}/environments/dev.env",
      "env": {
        "FLASK_APP": "openecoe-api.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "rq",
        "worker"
      ],
      "jinja": false,
      "justMyCode": true
    },
    {
      "name": "vars",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "envFile": "${workspaceFolder}/environments/dev.env",
      "env": {
        "FLASK_APP": "openecoe-api.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "gen"
      ],
      "jinja": false,
      "justMyCode": true
    },
  ]
}
